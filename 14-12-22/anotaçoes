//faça um programa que leia 4 numeros no final precisa mostrar qual o maior numero




programa {
  
  inteiro numeroMaiorGlobal = 0
    funcao controlarMaiornumero ( inteiro numeroAcomparar, inteiro numeroMaior) -> declaração de parametros
    se (numeroAcomparar > numeroMaior){                                          -> funçao de comparaçao
     numeroMaiorGlobal = numeroAcomparar
    }
  
  funcao obterMaiorNum(){
    inteiro numero [4]

      para (inteiro i = 0; i < 4; i++){
      escreva("Informe um número: ")
      leia (numero[i])
      controlarMaiornumero(numero[i], numeroMaiorGlobal]) 
    }
  
    escreva ("O maior numero é :", numeroMaiorGlobal)
  }
  
  funcao inicio() {
   
    obterMaiorNum()


      
  }

}




