//crie um programa que tenha uma funcao que solicite a idade do usuario e retorne seu valor já escrevendo a mensagem 

//"A idade digiditada é " [idade]




programa {
  funcao inteiro obterIdade(){        -> declaraçao de funcao, definiçao de tipagem
   inteiro idade = 0
    escreva ("Digite uma idade: ")
    leia (idade)
    retorne (idade)                    -> declaracao de retrono
 }
  
  
  funcao inicio() {
    escreva ("A idade digitada é :", obterIdade()) -> chamada de função dentro de outra funcao
  }
}



programa {
  
  funcao meuCalculo = (inteiro num1, inteiro num2, inteiro num3 ){
    retorne (num1 + num2 + num3) / 3
  }
  
  funcao inicio() {
    escreva ("A media entre as tres notas é: ",
    meuCalculo(1,5,1)
    
  }
}


programa {
  inteiro num1 
  inteiro num2 

  funcao real soma = (inteiro num1, inteiro num2){
    retorne num1 + num2
  }
  funcao real subtracao (inteiro num1, inteiro num2){
    retorne num1 - num2
  }

  funcao real multiplicacao (inteiro num1, inteiro num2){
    retorne num1 * num2
  }
  funcao real divisao (inteiro num1, inteiro num2){
    retorne num1/num2
  }
  
  funcao inicio() {
    escreva("Escreva primeiro numero: ", num1)
    leia (num1)
    escreva ("Escreva segundo numero: ", num2)
    leia (num2)
    
    escreva ("A soma entre os dois numeros é: ", soma(num1, num2),"\n") 
    escreva ("A subtraçao entre os dois numeros é: ", subtracao(num1, num2), "\n")    
    escreva ("A multiplicacao entre os dois numeros é: ", multiplicacao(num1, num2), "\n")
    escreva ("A divisão entre os dois numeros é: ", divisao(num1, num2),"\n ")

}



